{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "Database": "Host=bookify-db;Port=5432;Database=${DB_NAME};Username=${DB_USER};Password=${DB_PASSWORD};"
  },
  "Authentication": {
    "Audience": "account",
    "ValidIssuer": "http://bookify-idp:8080/realms/bookify",
    "MetadataUrl": "http://bookify-idp:8080/realms/bookify/.well-known/openid-configuration",
    "RequireHttpsMetadata": false
  }
}
